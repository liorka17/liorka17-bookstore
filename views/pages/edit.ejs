<div class="container">
    <h2>锔 注专转 住驻专</h2>
    <form action="/books/<%= book._id %>?_method=PUT" method="POST" class="book-form">
        <div>
            <label for="title">转专:</label>
            <input type="text" id="title" name="title" value="<%= book.title %>" required>
        </div>
        <div>
            <label for="author">专:</label>
            <input type="text" id="author" name="author" value="<%= book.author %>" required>
        </div>
        <div>
            <label for="price">专:</label>
            <input type="number" id="price" name="price" step="0.01" value="<%= book.price %>" required>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn edit-btn"> 砖专 砖</button>
            <a href="/" class="btn cancel-btn"> </a>
        </div>
    </form>
</div>
